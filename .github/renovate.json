{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":timezone(Asia/Kolkata)"],
  "ignoreUnstable": true,
  "pinVersions": false,
  "rebaseStalePrs": true,
  "separateMultipleMajor": true,
  "labels": ["Dependency", "Changed"],
  "composer": {
    "enabled": true
  },
  "major": {
    "semanticCommitType": "chore",
    "semanticCommitScope": "deps"
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["Security", "Type: Critical"]
  },
  "packageRules": [
    {
      "groupName": "renovate-meta",
      "automerge": true,
      "updateTypes": ["lockFileMaintenance", "minor", "patch", "pin", "digest"],
      "labels": ["Dependency", "Changed", "automerge ðŸš€"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps",
      "semanticCommits": "enabled",
      "datasources": ["npm"]
    },
    {
      "groupName": "dependencies (major)",
      "automerge": false,
      "depTypeList": ["require"],
      "updateTypes": ["major"],
      "labels": ["Dependency", "Changed"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps",
      "semanticCommits": "enabled"
    },
    {
      "groupName": "dependencies (non-major)",
      "automerge": true,
      "depTypeList": ["dependencies", "require"],
      "updateTypes": ["patch", "minor", "pin", "digest"],
      "labels": ["Dependency", "Changed", "automerge ðŸš€"],
      "semanticCommitType": "fix",
      "semanticCommitScope": "deps",
      "semanticCommits": "enabled"
    },
    {
      "groupName": "devDependencies (major)",
      "automerge": false,
      "depTypeList": ["devDependencies", "require-dev"],
      "updateTypes": ["major"],
      "labels": ["Dependency", "Changed"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps",
      "semanticCommits": "enabled"
    },
    {
      "groupName": "devDependencies (non-major)",
      "automerge": true,
      "depTypeList": ["devDependencies", "require-dev"],
      "updateTypes": ["patch", "minor", "pin", "digest"],
      "labels": ["Dependency", "Changed", "automerge ðŸš€"],
      "semanticCommitType": "chore",
      "semanticCommitScope": "deps",
      "semanticCommits": "enabled"
    }
  ]
}
