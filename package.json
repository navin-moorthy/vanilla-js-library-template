{
  "name": "vanilla-js-library-template",
  "version": "0.0.1",
  "type": "module",
  "description": "Template for production ready vanilla js library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timelessco/vanilla-js-library-template.git"
  },
  "homepage": "https://github.com/timelessco/vanilla-js-library-template#readme",
  "bugs": {
    "url": "https://github.com/timelessco/vanilla-js-library-template/issues"
  },
  "author": "Timeless <hello@timeless.co> (https://timeless.co/)",
  "license": "MIT",
  "private": true,
  "main": "./lib/vanilla-js-library-template.umd.js",
  "module": "./lib/vanilla-js-library-template.es.js",
  "exports": {
    ".": {
      "import": "./lib/vanilla-js-library-template.es.js",
      "require": "./lib/vanilla-js-library-template.umd.js"
    }
  },
  "browser": "./lib/vanilla-js-library-template.umd.js",
  "unpkg": "./lib/vanilla-js-library-template.umd.js",
  "files": [
    "lib"
  ],
  "keywords": [
    "js",
    "library",
    "production",
    "template",
    "vanilla"
  ],
  "scripts": {
    "build": "vite build --config vite-lib.config.js",
    "build:website": "vite build",
    "check": "pnpm lint:check && pnpm csslint:check && pnpm format:check",
    "commit": "gacp",
    "csslint:check": "stylelint '**/*.css' --cache --color --ignore-path .prettierignore -f verbose",
    "csslint:fix": "stylelint '**/*.css' --fix --cache --color --ignore-path .prettierignore -f verbose",
    "dev": "vite --host",
    "fix": "pnpm lint:fix &&  pnpm csslint:fix && pnpm format:fix",
    "format:check": "prettier -l --cache \"./**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}\"",
    "format:fix": "prettier --write --cache --check \"./**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}\"",
    "lint:check": "eslint --cache --color --ext .js,.cjs,.jsx,.ts,.cts,.tsx .",
    "lint:fix": "eslint --cache --color --ext .js,.cjs,.jsx,.ts,.cts,.tsx . --fix",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "preview": "vite preview",
    "release": "release-it",
    "release:check": "release-it --dry-run",
    "test": "echo \"no test specified\" && exit 0"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gacp": "^3.0.3",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "pinst": "^3.0.0",
    "prettier": "^2.8.1",
    "prettier-plugin-pkg": "^0.17.1",
    "release-it": "^15.5.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "vite": "^4.0.0"
  },
  "sideEffects": false,
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gacp": {
    "add": false,
    "push": false,
    "emoji": "emoji",
    "editor": false
  },
  "lint-staged": {
    "**/*.{js,cjs,jsx,ts,cts,tsx}": [
      "pnpm lint:fix"
    ],
    "**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}": [
      "pnpm format:fix"
    ]
  },
  "source": "./src/index.js"
}
